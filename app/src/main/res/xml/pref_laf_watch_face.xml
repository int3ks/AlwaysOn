<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:icon="@drawable/ic_palette"
        android:key="ao_style"
        android:summary="@string/pref_look_and_feel_ao_summary"
        android:title="@string/pref_look_and_feel_ao" />
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_clock"
        android:key="ao_clock"
        android:summaryOff="@string/pref_disabled"
        android:summaryOn="@string/pref_enabled"
        android:title="@string/pref_ao_showClock" />
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_date"
        android:key="ao_date"
        android:summaryOff="@string/pref_disabled"
        android:summaryOn="@string/pref_enabled"
        android:title="@string/pref_ao_showDate" />
    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_battery"
        android:key="d"
        android:summaryOff="@string/pref_disabled"
        android:summaryOn="@string/pref_enabled"
        android:title="@string/pref_ao_showBatteryIcn" />
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_percent"
        android:key="ao_battery"
        android:summaryOff="@string/pref_disabled"
        android:summaryOn="@string/pref_enabled"
        android:title="@string/pref_ao_showBattery" />
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_notification"
        android:key="ao_mediainformation"
        android:summaryOff="@string/pref_disabled"
        android:summaryOn="@string/pref_enabled"
        android:title="@string/pref_ao_showMediainformations" />
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_notification"
        android:key="ao_notification_icons"
        android:summaryOff="@string/pref_disabled"
        android:summaryOn="@string/pref_enabled"
        android:title="@string/pref_ao_showNotificationIcons" />
    <SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_portrait"
        android:key="ao_animate_icons"
        android:summary=""
        android:title="Animate notifications" />
    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_clock"
        android:key="hour"
        android:summaryOff="@string/pref_look_and_feel_hour_summary_off"
        android:summaryOn="@string/pref_look_and_feel_hour_summary_on"
        android:title="@string/pref_look_and_feel_hour" />
    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_clock"
        android:key="am_pm"
        android:summary="@string/pref_look_and_feel_am_pm_summary"
        android:title="@string/pref_look_and_feel_am_pm" />

    <io.github.domi04151309.alwayson.preferences.EditIntegerPreference
        android:defaultValue="3"
        android:icon="@drawable/ic_touch_app"
        android:key="ao_fingerprint_visibility"
        android:summary="visibility of the fingerprint icon (0 to 10)"
        android:title="finderprint visibility" />

    <Preference
        android:icon="@drawable/ic_notification"
        android:key="pref_filter_notifications"
        android:summary="@string/pref_look_and_feel_filter_notifications_summary"
        android:title="@string/pref_look_and_feel_filter_notifications" />

</PreferenceScreen>
